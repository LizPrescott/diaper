<% content_for (:main) do %>

<%= content_for?(:head) ? yield(:head) : yield %>

<body class="hold-transition skin-blue sidebar-mini">
<!-- Site wrapper -->
<div class="wrapper">

  <header class="main-header">
    <!-- Logo -->
    <% if user_signed_in? %>
      <a href="<%= root_path %>" class="logo">
    <% end %>
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <span class="logo-mini"><img src="/img/diaper-base-logo-icon.svg" alt="DiaperBase Logo (icon)" title="DiaperBase">
    </span>
      <!-- logo for regular state and mobile devices -->
    <span class="logo-lg"><%= image_tag "/img/diaper-base-logo-words-white.svg", alt: "DiaperBase Logo", id: "logo" %></span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
      <!-- Sidebar toggle button-->
      <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

    <% if user_signed_in? %>
      <%= content_for?(:lte_navbar) ? yield(:lte_navbar) : yield %>
    <% end %>
    </nav>
  </header>

  <!-- =============================================== -->
  <%# <% # If there's no organization set, most of these routes won't work. %>
  <% if user_signed_in? %>
    <%= content_for?(:lte_sidebar) ? yield(:lte_sidebar) : yield %>
  <% end %> %>


  <!-- =============================================== -->

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div id="flash-message-container">
      <% flash.each do |key, value| %>
        <div class="<%= flash_class(key) %> alert-dismissible">
              <a href="#" class="close" data-dismiss="alert" aria-label="close" style="text-decoration: none;"><%= fa_icon('times') %></a>
              <%= value %>
        </div>
      <% end %>
    </div>
    <%= content_for?(:content) ? yield(:content) : yield %>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <footer class="main-footer">
    <div class="pull-right hidden-xs">
    </div>
    <strong>Diaperbase was built with <i class="fa fa-heart"></i> by <a href="http://rubyforgood.org">Ruby for Good</a>.</strong>
  </footer>

     </div>
   </div>
 </aside>
 <!-- /.control-sidebar -->
 <!-- Add the sidebar's background. This div must be placed
      immediately after the control sidebar -->
 <div class="control-sidebar-bg"></div>
 </div>
<!-- ./wrapper -->
<script>
  $(document).ready(function () {
    $('.sidebar-menu').tree()
  })
</script>
</body>
<div class="modal fade" id="modal_new_diaper_drive" role="dialog"></div>

<% end %>

<%= render template: "layouts/application" %>
